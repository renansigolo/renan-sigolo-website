---
import { projectsData } from "./projects-data"

const encodeImage = (imageUrl: string) => {
  const filename = imageUrl.toLowerCase().replace(/\s+/g, "")
  return `/images/projects/${filename}.webp`
}
---

<section data-test="projects-section">
  <h2 class="heading">My Projects</h2>
  <div class="grid">
    {
      projectsData.map((item) => (
        <a
          aria-label={item.subtitle}
          class="card"
          href={`https://${item.url}`}
          rel="noopener noreferrer"
          target="_blank"
        >
          <img
            alt={`${item.title} Preview`}
            class="card_image"
            height={225}
            loading="lazy"
            src={encodeImage(item.title)}
            width={360}
          />
          <div class="card_overlay">
            <p class="card_title">
              <span>{item.title}</span>
              <br />
              {item.url}
            </p>
          </div>
        </a>
      ))
    }
  </div>
</section>

<style>
  .heading {
    margin-bottom: 2rem;
    text-align: center;
    font-size: 1.875rem;
    line-height: 2.25rem;
    font-weight: 500;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 2fr));
    place-items: center;
    grid-gap: 1rem;
  }

  .card {
    width: auto;
    transition: transform 0.2s ease-in-out;
  }
  .card:hover {
    transform: scale(1.05);
  }
  .card_image {
    aspect-ratio: 16 / 10;
    border-radius: 0.25rem;
    max-width: 100%;
    object-fit: cover;
    width: 100%;
  }
  .card_title {
    position: absolute;
    bottom: 0.5rem;
    left: 1rem;
    color: var(--gray-200);
  }
  .card_title span {
    font-weight: var(--bold);
  }
  .card:hover .card_overlay {
    display: block;
  }

  .card_overlay {
    position: absolute;
    top: 0;
    left: 0;
    background-color: var(--bg-gray-900);
    border-radius: 0.25rem;
    width: 100%;
    height: 100%;
    display: none;
  }
</style>
