---
import { Image } from "@astrojs/image/components"
---

<section data-test="section-profile">
  <Image
    src="images/profile.jpeg"
    width={256}
    height={256}
    alt="Renan Sigolo Profile"
    format="webp"
  />
  <h1>Renan Sigolo</h1>
  <p>Software Engineer</p>
</section>

<style>
  section {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 8rem auto;
    text-align: center;
  }

  img {
    align-items: center;
    border-radius: 9999px;
    justify-content: center;
    width: 128px;
    height: 128px;
  }

  h1 {
    font-size: 2.25rem;
    font-weight: 500;
    letter-spacing: 0.025em;
    line-height: 2.5rem;
    margin: 0.5rem auto;
  }
  @media (min-width: 768px) {
    h1 {
      font-size: 3rem;
      line-height: 1;
    }
  }

  p {
    font-size: 1.25rem;
    font-weight: 300;
    line-height: 1.75rem;
    margin: 0;
  }
</style>
